# Environment variables for reVoAgent Real-Time AI Integration

# ============================================================================
# AI PROVIDER CONFIGURATION
# ============================================================================

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.1

# Anthropic Configuration  
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_BASE_URL=https://api.anthropic.com
ANTHROPIC_MAX_TOKENS=4000
ANTHROPIC_TEMPERATURE=0.1

# DeepSeek R1 Configuration (uses OpenAI-compatible API)
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1
DEEPSEEK_MODEL=deepseek-coder

# Local Model Configuration
USE_LOCAL_MODELS=false
LOCAL_MODEL_PATH=/path/to/local/models
LOCAL_MODEL_DEVICE=cpu
LOCAL_MODEL_MAX_LENGTH=2048

# ============================================================================
# API & SERVER CONFIGURATION
# ============================================================================

# Backend API Configuration
API_HOST=0.0.0.0
API_PORT=12001
API_WORKERS=4
API_RELOAD=true
API_LOG_LEVEL=info

# Frontend Configuration
VITE_API_URL=http://localhost:12001
VITE_WS_URL=ws://localhost:12001
VITE_APP_NAME=reVoAgent
VITE_APP_VERSION=3.0.0

# CORS Configuration
CORS_ORIGINS=["http://localhost:12000", "http://localhost:3000", "http://127.0.0.1:12000"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# ============================================================================
# WEBSOCKET CONFIGURATION
# ============================================================================

# WebSocket Settings
WS_MAX_CONNECTIONS=1000
WS_PING_INTERVAL=30
WS_PING_TIMEOUT=10
WS_CLOSE_TIMEOUT=10
WS_MAX_MESSAGE_SIZE=1048576

# Real-time Updates
DASHBOARD_UPDATE_INTERVAL=5
AGENT_UPDATE_INTERVAL=2
TASK_POLLING_INTERVAL=1

# ============================================================================
# AGENT CONFIGURATION
# ============================================================================

# Agent Execution Settings
MAX_CONCURRENT_AGENTS=10
AGENT_TIMEOUT=300
AGENT_RETRY_ATTEMPTS=3
AGENT_RETRY_DELAY=2

# Agent Types Configuration
ENABLE_CODE_GENERATOR=true
ENABLE_DEBUG_AGENT=true
ENABLE_TESTING_AGENT=true
ENABLE_SECURITY_AGENT=true

# Agent Memory Limits
AGENT_MAX_MEMORY=1GB
AGENT_MAX_CPU_PERCENT=80

# ============================================================================
# ERROR HANDLING & MONITORING
# ============================================================================

# Error Handling Configuration
ERROR_TRACKING_ENABLED=true
ERROR_RETENTION_DAYS=30
ERROR_RATE_LIMIT=100
ERROR_NOTIFICATION_ENABLED=true

# Retry Configuration
RETRY_MAX_ATTEMPTS=3
RETRY_BASE_DELAY=1.0
RETRY_MAX_DELAY=60.0
RETRY_EXPONENTIAL_BASE=2.0
RETRY_JITTER_ENABLED=true

# Circuit Breaker Configuration
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RESET_TIMEOUT=60
CIRCUIT_BREAKER_ENABLED=true

# ============================================================================
# DATABASE & STORAGE
# ============================================================================

# Database Configuration
DATABASE_URL=sqlite:///./data/revoagent.db
DATABASE_ECHO=false
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=0

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=20
REDIS_SOCKET_TIMEOUT=5

# File Storage
STORAGE_PATH=./data/storage
TEMP_PATH=./data/temp
LOG_PATH=./data/logs

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================

# API Security
SECRET_KEY=your_secret_key_here_change_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10
RATE_LIMIT_ENABLED=true

# Input Validation
MAX_REQUEST_SIZE=10MB
MAX_PROMPT_LENGTH=10000
SANITIZE_INPUT=true

# ============================================================================
# LOGGING & MONITORING
# ============================================================================

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=./data/logs/revoagent.log
LOG_ROTATION=daily
LOG_RETENTION=30

# Metrics and Monitoring
METRICS_ENABLED=true
METRICS_PORT=9090
PROMETHEUS_ENABLED=false

# Performance Monitoring
PERFORMANCE_TRACKING=true
RESPONSE_TIME_HISTOGRAM=true
MEMORY_USAGE_TRACKING=true

# ============================================================================
# DEVELOPMENT & TESTING
# ============================================================================

# Development Mode
DEBUG=false
DEVELOPMENT_MODE=false
HOT_RELOAD=true

# Testing Configuration
TEST_DATABASE_URL=sqlite:///./data/test.db
TEST_AI_MOCKS=true
TEST_TIMEOUT=30
TEST_PARALLEL=true

# Feature Flags
FEATURE_WEBSOCKETS=true
FEATURE_REAL_AI=true
FEATURE_ERROR_TRACKING=true
FEATURE_METRICS=true
FEATURE_CACHING=true

# ============================================================================
# EXPERIMENTAL FEATURES
# ============================================================================

# Advanced AI Features
ENABLE_MULTIMODAL=false
ENABLE_FUNCTION_CALLING=true
ENABLE_STREAMING=true
ENABLE_MEMORY=false

# Performance Optimizations
ENABLE_CACHING=true
CACHE_TTL=3600
ENABLE_COMPRESSION=true
ENABLE_BATCH_PROCESSING=false

# ============================================================================
# PRODUCTION SETTINGS
# ============================================================================

# Production Security
FORCE_HTTPS=false
HSTS_ENABLED=false
CSP_ENABLED=false

# Scaling Configuration
AUTO_SCALING=false
MIN_WORKERS=2
MAX_WORKERS=8
WORKER_MEMORY_LIMIT=2GB

# Health Checks
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# Backup and Recovery
BACKUP_ENABLED=false
BACKUP_INTERVAL=daily
BACKUP_RETENTION=7
BACKUP_COMPRESSION=true
